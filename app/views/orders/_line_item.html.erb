<div class="line-item row mb-3">
  <div class="col-md-2">
    <%= image_tag line_item.product.image.thumb.url, class: 'img-fluid' %>
  </div>
  <div class="col-md-6">
    <h5><%= line_item.product.name %></h5>
    <p><%= line_item.product.description %></p>
  </div>
  <div class="col-md-2">
    <p>Quantity: <%= line_item.quantity %></p>
  </div>
  <div class="col-md-2">
    <p>Total: <%= humanized_money_with_symbol(line_item.total_price_cents / 100.0) %></p>
  </div>
</div>
<hr>