<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url, alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end %>
  
  <div class="product-actions" style="display: flex; align-items: center;">
    <% if product.quantity == 0 %>
      <div class="soldout" style="margin-right: 10px;">
        <span>Sold Out</span>
      </div>
      <%= button_to add_item_cart_path(product_id: product.id), class: 'btn disabled', method: :post, disabled: true do %>
        <%= fa_icon "shopping-cart", text: 'Add' %>
      <% end %>
    <% else %>
      <%= button_to add_item_cart_path(product_id: product.id), class: 'btn', method: :post do %>
        <%= fa_icon "shopping-cart", text: 'Add' %>
      <% end %>
    <% end %>
  </div>
</article>
